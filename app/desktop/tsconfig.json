{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types"      
    ],
    "paths": {
      "@angular/common": ["../node_modules/@angular/common"],
      "@angular/core": ["../node_modules/@angular/core"],
      "@angular/http": ["../node_modules/@angular/http"],     
      // "rxjs/*": ["../node_modules/rxjs/*"],
      "environments": [
        "./environments"
      ]
    },
    "types": [
      "node",
      "jasmine"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "exclude": [
    // "node_modules"
  ]
}
